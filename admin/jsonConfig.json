{
	"i18n": true,
	"type": "panel",
	"items": {
		"stations": {
			"type": "chips",
			"label": "stations",
			"help": "stations_to_be_monitored",
			"xs": 12,
			"sm": 12,
			"md": 6,
			"lg": 4,
			"xl": 4,
			"newLine": false,
			"validator": "data.stations.every(station => /^DE[A-Z]{2}[0-9]{3}$/.test(station))",
			"validatorErrorText": "station_nonvalid_text",
			"validatorNoSaveOnError": true
		},
		"_stationsError": {
			"newLine": true,
			"type": "staticText",
			"text": "wrong_item_in_stations",
			"style": {
				"color": "red",
				"fontSize": 24
			},
			"hidden": "!data.stations || data.stations.length === 0 || data.stations.every(station => /^DE[A-Z]{2}[0-9]{3}$/.test(station))",
			"xs": 12,
			"sm": 12,
			"md": 6,
			"lg": 4,
			"xl": 4
		},
		"operatingInstructions": {
			"newLine": true,
			"type": "staticText",
			"label": "multi-language text",
			"text": "instructionManual",
			"style": {
				"color": "green",
				"fontSize": 16
			},
			"xs": 12,
			"sm": 12,
			"md": 6,
			"lg": 4,
			"xl": 4
		}
	}
}